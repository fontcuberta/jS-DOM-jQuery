<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pkmn-name">
              Feraligtr
          </span>
          <small class="js-pkmn-number">
              #160
          </small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Type</dt>
          <dd class="js-pkmn-type"></dd>

          <dt>HP</dt>
          <dd class="js-pkmn-hp"></dd>

          <dt>Attack</dt>
          <dd class="js-pkmn-attack"></dd>

          <dt>Defense</dt>
          <dd class="js-pkmn-defense"></dd>

          <dt>Special Attack</dt>
          <dd class="js-pkmn-spAttack"></dd>

          <dt>Special Defense</dt>
          <dd class="js-pkmn-spDefense"></dd>

          <dt>Speed</dt>
          <dd class="js-pkmn-speed"></dd>

          <dt>Height</dt>
          <dd class="js-pkmn-height"></dd>

          <dt>Weight</dt>
          <dd class="js-pkmn-weight"></dd>

          <dt>Decription</dt>
          <dd class="js-pkmn-desc"></dd>
        </dl>
        <hr>
        <h3>Image</h3>
        <div class="img-responsive">
            <img id="pkmn-sprite" src="" />
        </div>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
